<p id="notice"><%= notice %></p>



<div id="user-info">
  <h1>
    <%= @user.username %>
  </h1>


  <p>
    <img class="user-profile-photo" src="<%= @user.profile_photo %>">
  </p>

  <p>
    <img class="user-bg-photo" src="<%= @user.bg_photo %>">
  </p>

  <%= link_to "Message",  user_messages_path(current_user) %>
</div>

<div id="user_closet">
  <h1>Closet</h1>
    <% @user.listings.limit(5).each do |listing| %>
      <%= link_to user_listing_path(@user,listing) do %>
        <img src="<%= listing.asset.photo1.url %>">
        <%= listing.title %>
        $<%= listing.price %>
      <% end %>
    <% end %>
</div>

<%= link_to 'Edit', edit_user_path(@user) %> |
<%= link_to 'Back', users_path %>
