<h1>Listing listings</h1>

<table>
  <thead>
    <tr>
      <th>Seller</th>
      <th>Title</th>
      <th>Description</th>
      <th>Brand</th>
      <th>Category</th>
      <th>Original price</th>
      <th>Price</th>
      <th>Status</th>
      <th>Condition</th>
      <th>Sale price</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @purchases.each do |purchase| %>
      <% purchase.listings.each do |listing| %>
      <tr>

          <td><%= link_to listing.user.username, listing.user %> </td>
          <%= link_to [listing.user,listing] do %>
          <td><%= listing.title %></td>
          <td><%= listing.description %></td>
          <td><%= listing.brand.name %></td>
          <td><%= listing.category.name %></td>
          <td><%= listing.original_price %></td>
          <td><%= listing.price %></td>
          <td><%= listing.status %></td>
          <td><%= listing.condition %></td>
          <td><%= listing.sale_price %></td>
        <% end %>
        </tr>
        <% end %>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Listing', new_user_listing_path(@user) %>
